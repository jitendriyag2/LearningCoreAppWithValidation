@model LearningCoreAppWithValidation.ViewModels.AddCenterVM


<h4>AddCenterVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenterTypes" class="control-label"></label>
                <select asp-for="SelectedCenterType" asp-items="@(new SelectList(Model.CenterTypes, "Id", "Name"))" class="form-control">
                    <option>Center Type </option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentCenters" class="control-label"></label>
                <select asp-for="CenterRefID" asp-items="@(new SelectList(Model.ParentCenters, "Id", "Name"))" class="form-control">
                    <option>Parent Center</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
