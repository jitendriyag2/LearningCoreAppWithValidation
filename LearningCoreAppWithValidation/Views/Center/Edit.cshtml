@model LearningCoreAppWithValidation.ViewModels.EditCenterVM

<h4>EditCenterVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenterRefID" class="control-label"></label>
                <select asp-for="CenterRefID" asp-items="@(new SelectList(Model.ParentCenters, "Id", "Name", Model.CenterRefID))" class="form-control" >

                </select>
                <span asp-validation-for="CenterRefID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCenterType" class="control-label"></label>
                <select asp-for="SelectedCenterType"  asp-items="@(new SelectList(Model.CenterTypes, "Id", "Name"))" class="form-control" >

                </select>
                <span asp-validation-for="SelectedCenterType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
